{
  "compilerOptions": {
    "baseUrl": "",
    "target": "es5",
    "module": "es2015",
    "moduleResolution": "node",
    "declaration": true,
    "noImplicitAny": false,
    "strictNullChecks": false,
    "sourceMap": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "skipLibCheck": true,
    "stripInternal": true,
    "typeRoots": ["./node_modules/@types"],
    "types": [
      "node"
    ],
    "lib": [
      "dom",
      "es2015"
    ],
    "paths": {
      "rxjs/*": ["node_modules/rxjs/*"]
    }
  },
  "compileOnSave": false,
  "buildOnSave": false,
  "exclude": [
    "node_modules",
    "dist",
    "tests",
    "**/*.ngfactory.ts",
    "**/*.shim.ts",
    "**/*.spec.ts"
  ],
  "angularCompilerOptions": {
    "genDir": "dist",
    "entryModule": "src/schema-form.module#IonSchemaFormModule",
    "skipTemplateCodegen": true,
    "strictMetadataEmit": true
  }
}
